.navbar.navbar-inverse.navbar-fixed-top
  .navbar-inner
    .container
      %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.brand{:href => "#"} PoMoDoMo
      .nav-collapse.collapse
        %ul.nav
          %li.active
            %a{:href => "#"} Home
          - if current_user
            %li
              %a{:href => user_path(current_user)} Profile
          %li
            %a{:href => "#about"} About
        .navbar-form.pull-right
          - unless current_user
            = link_to "Sign in", new_user_session_path, :class => 'btn'                    
            %a.btn{:href => new_user_registration_path} Sign up
          - else
            = link_to "Log out", destroy_user_session_path, :method => :delete, :class => 'btn'
