%h2= "#{@user.email} [#{@user.try(:trophy_score)}]"
%hr

%section#pomodoros
  .row
    .span12
      %h3 Stats
  .row
    .span10.offset1
      %ul{:style => "list-style: none;"}
        %li= "Pomodoros Completed: #{@user.try(:completed_pomodoros).try(:count)}"
        %li= "Pomodoro Cycles Completed: #{@user.try(:completed_cycles).try(:count)}"
        %li= "Pomodoros Failed: #{@user.try(:failed_pomodoros).try(:count)}"
        %li= "Trophies Earned: #{@user.try(:trophies).try(:count)}"
        %li= "Total Trophy Points: #{@user.try(:trophy_score)}"


%hr
%section#trophies
  .row
    .span12
      %h3 Trophies
    .span10.offset1
      %ul
        - @user.trophies.each do |trophy|
          %li
            %h4= "#{trophy.name} [#{trophy.value}]"
          %li{:style => 'list-style: none;'}
            %p
              %em.trophy_text= trophy.text
          %li{:style => 'list-style: none;'}= "Earned on: #{trophy.try(:created_at).try(:strftime, '%D')}"
