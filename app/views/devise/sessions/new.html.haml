#user_sign_in_form{:style => "text-align: center;"}
  = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-inline'}) do |f|
    = f.text_field :email, :class => 'input', :placeholder => "Email"
    = f.password_field :password, :class => 'input', :placeholder => "Password"
    - if devise_mapping.rememberable?
      %label.checkbox
        %input{:type => 'checkbox', :id => 'user_remember_me', :name => 'user[remember_me]'} Remember me
    = f.submit "Sign in", :class => 'btn'
  %hr
  = link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook), :class => 'btn'
  %br
  %br
  /= link_to "Sign in with Twitter", user_omniauth_authorize_path(:twitter), :class => 'btn'
  = link_to "Sign in with Twitter", "#", :class => 'btn'